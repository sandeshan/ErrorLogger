@model ErrorLoggerModel.ErrorLog

@{
    ViewBag.Title = "Edit Log";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h3>Edit Log File: </h3>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.fileName)</dt>
            <dd>@Html.DisplayFor(model => model.fileName)</dd>
        </dl>
        <h3>Current Log File Type: </h3>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.logType)</dt>
            <dd>@Html.DisplayFor(model => model.logType.typeName)</dd>
        </dl>
    </div>

    <div>
        <h4>New Log File Type: </h4>

        <div class="form-group">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.logID)
            @Html.HiddenFor(model => model.fileName)

            @Html.EditorFor(model => model.logType.typeName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.logType.typeName, "", new { @class = "text-danger" })
            <input type="submit" value="Save" class="btn btn-default" />
        </div>

    </div>
}

<div>
    <br /><br />
    @Html.ActionLink("ErrorLogs Home", "Index")
</div>
