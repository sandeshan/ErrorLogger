@model ErrorLoggerModel.Application

@{
    ViewBag.Title = "Edit Application Users";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h2>Edit Users for Application: </h2>
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.appName)</dt>
            <dd>@Html.DisplayFor(model => model.appName)</dd>
        </dl>
    </div>

    <div>
        <h4>Select Users: </h4>

        <div class="form-group">
            <p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.appId)
                @Html.HiddenFor(model => model.appName)
                @Html.ListBox("userID", (MultiSelectList)ViewBag.Users)
            </p>
            <br />
            <p><input type="submit" value="Save" class="btn btn-default" /></p>           
        </div>
    </div>
}

<div>
    <br />
    @Html.ActionLink("Admin Home", "Index") |
    @Html.ActionLink("Back to Applications Home", "Applications")
</div>
